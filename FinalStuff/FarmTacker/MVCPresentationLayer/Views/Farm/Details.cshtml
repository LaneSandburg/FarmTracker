    <table style="width:40%">
        <tr>
            <th>FarmFieldID</th>
            <th>CropID</th>
            <th>Acres</th>
        </tr>
        @foreach (var field in ViewBag.fields)
        {
            <tr>

                <td>@field.FarmFieldID</td>
                <td>@field.CropID</td>
                <td>@field.Acres</td>
                <td>


                    @Html.ActionLink("Details", "Details", "Field", new { id = field.FarmFieldID }, htmlAttributes: new { id = field.FarmFieldID })
                </td>
            </tr>
        }
    </table>
</div>

